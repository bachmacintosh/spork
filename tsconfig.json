{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"esModuleInterop": true,
		"rootDir": "./src",
		"outDir": "./prod",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"types": ["node", "jest"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["tests/**/*.ts"]
}
