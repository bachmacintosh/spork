{
	"name": "spork",
	"version": "0.0.1",
	"private": "true",
	"type": "module",
	"description": "A Discord Bot that generates various random/pseudo-random items",
	"main": "./prod/index.js",
	"scripts": {
		"db:deploy": "prisma migrate deploy",
		"db:dev": "prisma migrate dev",
		"db:format": "prisma format",
		"db:reset": "prisma migrate reset",
		"prebuild": "rimraf ./prod && prisma generate",
		"build": "tsc",
		"lint": "eslint . && prettier --check .",
		"lint:fix": "eslint --fix . && prettier --write .",
		"start": "npm run build && node -r dotenv/config ./prod/index.js | pino-pretty",
		"reload": "npm run build && node -r dotenv/config ./prod/index.js reload | pino-pretty",
		"test": "jest ./tests"
	},
	"keywords": [
		"discord",
		"bot",
		"random",
		"random.org"
	],
	"author": "Collin Bachman <collin@bachman.io>",
	"license": "MIT",
	"dependencies": {
		"@discordjs/rest": "1.2.0",
		"@prisma/client": "4.4.0",
		"bufferutil": "4.0.6",
		"dayjs": "1.11.5",
		"discord.js": "14.5.0",
		"dotenv": "16.0.2",
		"erlpack": "github:discord/erlpack",
		"i18next": "21.9.2",
		"node-fetch": "^3.2.10",
		"pino": "8.6.1",
		"pino-pretty": "9.1.0",
		"utf-8-validate": "5.0.9",
		"zlib-sync": "0.1.7"
	},
	"devDependencies": {
		"@types/node": "18.7.3",
		"@types/jest": "29.1.0",
		"@typescript-eslint/eslint-plugin": "5.38.1",
		"@typescript-eslint/parser": "5.38.1",
		"eslint": "8.24.0",
		"eslint-config-prettier": "8.5.0",
		"jest": "29.1.1",
		"prettier": "2.7.1",
		"prisma": "4.4.0",
		"rimraf": "3.0.2",
		"ts-jest": "29.0.3",
		"typescript": "4.8.4"
	}
}
